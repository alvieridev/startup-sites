{
    "manifest_version": 3,
    "version": "1.0.0",
    "name": "Alvieri",
      "permissions": ["scripting"],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "icons": {
        "32": "icon.png"
    },
    "description":  "Automatically open your favorite sites when browser starts",
    "action": {
        "default_popup": "index.html"
    }
}